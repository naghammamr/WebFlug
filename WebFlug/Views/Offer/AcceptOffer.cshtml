@model WebFlug.Models.Offers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Accept Offer</title>

<div class="form-horizontal">
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <br />
            <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                Are You Sure you want to accept this Offer?
            </h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.Offer_Id)
            @Html.HiddenFor(model => model.Order_Id)
            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.CreationDate)
            @Html.HiddenFor(model => model.DeliverDate)
            @Html.HiddenFor(model => model.TravellerReward)

            <div class="form-group" style="margin-left:400px">
                <div class="col-md-offset-2 col-md-10">
                    <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 ">
                        Accept Offer
                    </button>
                </div>
            </div>


        }
        <div>
            @Html.ActionLink("Back to My Offers", "ViewOldOrders", "Order")
        </div>

    </div>
</div>
<br />
