@model WebFlug.Models.Trips

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Delete</title>
<br />
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">

                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        Are You sure you want delete this offer?
                    </h4>

                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.FromWhere)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.FromWhere)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ToWhere)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ToWhere)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.DepartDate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DepartDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.TripCreationDate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TripCreationDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.TicketPhoto)
                            </dt>

                            <dd>
                                <img src="~/Uploads/@Html.DisplayFor(modelItem => Model.TicketPhoto)" class="thumbnail" style="width:100px" ; height:100px" />
