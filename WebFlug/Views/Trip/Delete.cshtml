                            <dt>
                                @Html.DisplayNameFor(model => model.AdditionalDetails)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AdditionalDetails)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
