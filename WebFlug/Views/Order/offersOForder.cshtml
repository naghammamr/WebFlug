@model WebFlug.ViewModels.OrdersViewModel

@{
    ViewBag.Title = "offers of orders";
}
<h3>
    <b> Prodcut Name :</b> @Model.order.ProductName
    <br />
    <b> Order Number :</b> @Model.order.OrderNumber
</h3>

    @if (Model.Offers.Count == 0)
    {
        <text> No offers for this order</text>
    }
    else
    {
         <h3><b>Offers Count : </b>@Model.Offers.Count </h3>

         <table class="table">
             @foreach (var item in Model.Offers)
             {
                 <tr>
                     <td>
                         @Html.DisplayFor(modelItem => item.TravellerReward)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.DeliverDate)
                     </td>
                     
                     <td>
                         @Html.ActionLink("Accept Offer", "offersOForder", new { id = Model.order.Order_Id }) |
                         @Html.ActionLink("Reject Offer", "", "")|
                     </td>
                 </tr>
             }

         </table>

        }